---
import Facebook from '@components/social-media/Facebook.astro';
import Youtube from '@components/social-media/Youtube.astro';
import Github from '@components/social-media/Github.astro';
import Linkedin from '@components/social-media/Linkedin.astro';
import Twitter from '@components/social-media/Twitter.astro';
import Rss from './Rss.astro';
---

<footer class="mt-auto relative text-zinc-600 dark:text-zinc-400 text-sm">
  <div
    class="mx-auto px-4 w-full py-12 max-w-5xl flex flex-col gap-6 justify-between items-center sm:px-6 lg:px-8"
  >
    <div
      class="absolute inset-x-0 top-0 h-px bg-zinc-900/5 transition dark:bg-white/5"
    >
    </div>
    <p>
      <span>Find an issue with this page? </span>
      <a
        class="transition text-green-500 dark:text-white hover:dark:text-green-500"
        href="https://github.com/kimhuy011199/astro-blog">Fix it on GitHub</a
      >
    </p>
    <Rss />
    <div class="flex gap-6 items-center">
      <Facebook />
      <Github />
      <Youtube />
      <Linkedin />
      <Twitter />
    </div>
    <p>Made with ❤️ by huynk.tech</p>
  </div>
</footer>
