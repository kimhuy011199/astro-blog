---
import '@styles/base.css';
import { ViewTransitions } from 'astro:transitions';
import BackgroundLinePattern from '@components/BackgroundLinePattern.astro';
import Header from '@components/header/Header.astro';
import Main from '@components/Main.astro';
import Footer from '@components/Footer.astro';
import {
  DEFAULT_PAGE_AUTHOR,
  DEFAULT_PAGE_DESC,
  DEFAULT_PAGE_TITLE,
  DEFAULT_SOCIAL_IMAGE_URL,
} from '@config/constant';

const {
  pageTitle = DEFAULT_PAGE_TITLE,
  pageDesc = DEFAULT_PAGE_DESC,
  pageAuthor = DEFAULT_PAGE_AUTHOR,
  socialImageUrl = `${Astro.site.href}${DEFAULT_SOCIAL_IMAGE_URL}`,
  canonicalUrl = new URL(Astro.url.pathname, Astro.site).href,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- General meta tag -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={pageDesc} />
    <meta name="author" content={pageAuthor} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDesc} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:alt" content={pageTitle} />
    <meta property="og:site_name" content="" />
    <meta property="og:type" content="article" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={pageDesc} />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:image" content={socialImageUrl} />
    <meta property="twitter:image:alt" content={pageTitle} />
    <meta property="twitter:site" content="" />

    <!-- Scripts -->
    <script is:inline src="/toggle-theme.js"></script>
    <ViewTransitions />
  </head>
  <body
    class="bg-white text-zinc-900 antialiased relative flex flex-col min-h-screen dark:bg-zinc-900 dark:text-white"
  >
    <BackgroundLinePattern />
    <Header />
    <Main>
      <slot />
    </Main>
    <Footer />
  </body>
</html>
