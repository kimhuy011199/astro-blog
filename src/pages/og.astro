---
import '@styles/base.css';
import { APP_NAME } from '@config/constant';
import profile from '@assets/images/share-profile.png';

const title = 'A Complete Guide to React Router: Everything You Need to Know';
const author = 'Huy Nguyen K';
---

<html lang="en">
  <head>
    <script is:inline src="/toggle-theme.js"></script>
  </head>
  <body
    class="h-[630px] bg-white text-zinc-900 antialiased relative flex flex-col min-h-screen dark:bg-zinc-900 dark:text-white"
  >
    <div class="absolute inset-0 -z-10 mx-0 max-w-none overflow-hidden">
      <div
        class="absolute left-1/2 top-0 ml-[-38rem] h-[42rem] w-[81.25rem] dark:[mask-image:linear-gradient(white,transparent)]"
      >
        <div
          class="absolute inset-0 bg-gradient-to-r from-[#36b49f] to-[#d3ff75] opacity-40 [mask-image:radial-gradient(farthest-side_at_top,white,transparent)] dark:from-[#36b49f]/30 dark:to-[#d3ff75]/30 dark:opacity-100"
        >
          <svg
            aria-hidden="true"
            class="absolute inset-x-0 inset-y-[-50%] h-[200%] w-full fill-black/40 stroke-black/50 mix-blend-overlay dark:fill-white/2.5 dark:stroke-white/5"
          >
            <defs>
              <pattern
                id=":S2:"
                width="72"
                height="56"
                patternUnits="userSpaceOnUse"
                x="-12"
                y="4"
              >
                <path d="M.5 56V.5H72" fill="none"></path>
              </pattern>
            </defs>
            <rect width="100%" height="100%" stroke-width="0" fill="url(#:S2:)"
            ></rect>
          </svg>
        </div>
      </div>
    </div>
    <div
      class="relative z-40 flex py-8 item-center items-center justify-between gap-12 bg-white/50 backdrop-blur-sm dark:bg-zinc-900/20 dark:backdrop-blur px-4 sm:px-6 lg:px-8"
    >
      <div
        class="absolute inset-x-0 top-full h-px bg-zinc-900/5 transition dark:bg-white/5"
      >
      </div>
      <a
        class="flex mx-auto gap-4 items-center text-lg transition-all"
        href="/"
      >
        <svg
          class="h-16"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 64 64"
        >
          <defs></defs>
          <rect
            class="fill-green-500 dark:fill-green-600"
            width="64"
            height="64"
            rx="8"></rect>
          <path
            class="fill-white"
            d="M16,50.44V14.11h7.71V29.67l-1.57.59a7.8,7.8,0,0,1,1.94-3.21,10.66,10.66,0,0,1,3.36-2.34,10,10,0,0,1,4.13-.88,9.57,9.57,0,0,1,5,1.2,7.51,7.51,0,0,1,3,3.59,14.54,14.54,0,0,1,1,5.82v16h-7.9V35.07a6.55,6.55,0,0,0-.45-2.6,3.12,3.12,0,0,0-1.35-1.55,4.19,4.19,0,0,0-2.23-.46,5.45,5.45,0,0,0-1.92.32,4.3,4.3,0,0,0-1.52.93,4.73,4.73,0,0,0-1,1.4,3.94,3.94,0,0,0-.37,1.72V50.44H16Z"
          ></path>
          <path
            class="fill-green-300"
            d="M49.43,50.23A4.36,4.36,0,0,1,46.16,49,4.64,4.64,0,0,1,45,45.65a4.61,4.61,0,0,1,1.24-3.35A4.2,4.2,0,0,1,49.43,41a4.43,4.43,0,0,1,3.29,1.21,4.7,4.7,0,0,1,1.19,3.43,4.57,4.57,0,0,1-1.24,3.29A4.27,4.27,0,0,1,49.43,50.23Z"
          ></path>
        </svg>
        <span class="text-4xl">{APP_NAME}</span>
      </a>
    </div>
    <div
      class="mx-auto max-w-5xl flex flex-col justify-center items-center gap-16 mt-24"
    >
      <h1 class="text-center !leading-snug sm:text-[56px] font-semibold">
        {title}
      </h1>
      {
        author ? (
          <div class="flex items-center gap-6">
            <img
              class="inline-block rounded-full border border-white/90 dark:border-white/70"
              src={profile.src}
              alt={author}
              width="80"
              height="80"
            />
            <div class="flex flex-col gap-2">
              <span class="text-xl">Written by:</span>
              <span class="text-2xl font-semibold">{author}</span>
            </div>
          </div>
        ) : null
      }
    </div>
  </body>
</html>
